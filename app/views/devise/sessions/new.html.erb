<div class="flex flex-col items-center justify-center ">
  
  <div class="bg-white shadow rounded lg:w-1/3  md:w-1/2 w-full p-10 mt-16">
    <p tabindex="0" class="focus:outline-none text-2xl font-extrabold leading-6 text-gray-800">Login to your account</p>
    <p tabindex="0" class="focus:outline-none text-sm mt-4 font-medium leading-none text-gray-500">Dont have account? <%= link_to "Sign up here", new_registration_path(resource_name) , class: "hover:text-gray-500 focus:text-gray-500 focus:outline-none focus:underline hover:underline text-sm font-medium leading-none  text-gray-800 cursor-pointer"%><br /></p>
    <div class="w-full flex items-center justify-between py-5">
      <hr class="w-full bg-gray-400">
      <p class="text-base font-medium leading-4 px-2.5 text-gray-400">OR</p>
      <hr class="w-full bg-gray-400  ">
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field">
        <%= f.label :email, class: "text-sm font-medium leading-none text-gray-800"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"%>
      </div>

      <div class="mt-6  w-full">
        <div class="field">
          <%= f.label :password, for: "pass", class: "text-sm font-medium leading-none text-gray-800" %><br />
        </div>
        <div class="relative flex items-center justify-center">
          <%= f.password_field :password, autocomplete: "current-password", id: "pass", class: "bg-gray-200 border rounded  text-xs font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"%>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="mt-8">
        <div class="actions">
          <%= f.submit "Log in", class: "focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 text-sm font-semibold leading-none text-white focus:outline-none bg-gray-700 border rounded hover:bg-gray-600 py-4 w-full" %>
        </div>
      </div>
    <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end %>
  </div>
</div>
